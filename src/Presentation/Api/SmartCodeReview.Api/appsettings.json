{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=SmartCodeReviewDb;Trusted_Connection=true;TrustServerCertificate=true;",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.MSSqlServer"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "DefaultConnection",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ]
  },
  "Jwt": {
    "SecretKey": "YourVerySecureSecretKeyHere_AtLeast32Characters!",
    "Issuer": "SmartCodeReview",
    "Audience": "SmartCodeReviewUsers",
    "ExpirationMinutes": 60
  },
  "GitHub": {
    "Token": "",
    "WebhookSecret": ""
  },
  "AIProvider": {
    "Provider": "Ollama",
    "Comment": "Seçenekler: Ollama (Ücretsiz, Local), Gemini (Ücretsiz Tier), HuggingFace (Ücretsiz)"
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "Model": "deepseek-coder",
    "Comment": "Ücretsiz local AI. Kurulum: https://ollama.ai - Model'ler: deepseek-coder, codellama, mistral"
  },
  "Gemini": {
    "ApiKey": "",
    "Model": "gemini-pro",
    "Comment": "Google Gemini ücretsiz tier: https://ai.google.dev"
  },
  "HuggingFace": {
    "ApiKey": "",
    "Model": "bigcode/starcoder",
    "Comment": "Hugging Face ücretsiz API: https://huggingface.co/inference-api"
  },
  "BackgroundJobs": {
    "EnableWebhookQueue": true,
    "QueueCheckIntervalSeconds": 5,
    "MaxRetryAttempts": 3
  },
  "AllowedHosts": "*"
}
